{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "module": "NodeNext",
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "src/index.ts",
    "src/i18n.ts",
    "src/firebase-aware.ts",
    "src/*/index.ts",
    "src/*/firebase-aware.ts",
    "types/*.d.ts"
  ]
}
