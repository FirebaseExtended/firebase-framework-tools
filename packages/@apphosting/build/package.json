{
    "name": "@apphosting/build",
    "version": "0.1.8",
    "main": "dist/index.js",
    "description": "Experimental addon to the Firebase CLI to run local builds",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FirebaseExtended/firebase-framework-tools.git"
    },
    "bin": {
        "apphosting-local-build": "dist/bin/localbuild.js"
    },
    "author": {
        "name": "Firebase",
        "url": "https://firebase.google.com/"
    },
    "bugs": {
        "url": "https://github.com/FirebaseExtended/firebase-framework-tools/issues"
    },
    "sideEffects": false,
    "scripts": {
        "build": "rm -rf dist && tsc && chmod +x ./dist/bin/*",
        "test:functional": "node --loader ts-node/esm ./e2e/run-local-build.ts"
    },
    "exports": {
        ".": {
            "node": "./dist/index.js",
            "default": null
        },
        "./dist/*": {
            "node": "./dist/*",
            "default": null
        }
    },
    "files": [
        "dist"
    ],
    "license": "Apache-2.0",
    "dependencies": {
        "@apphosting/common": "*",
      "@npmcli/promise-spawn": "^3.0.0",
        "colorette": "^2.0.20",
        "commander": "^11.1.0",
        "npm-pick-manifest": "^9.0.0",
        "ts-node": "^10.9.1"
    },
    "devDependencies": {
        "@types/commander": "*",
        "ts-mocha": "*",
        "ts-node": "*",
        "typescript": "*"
    }
}
