{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "allowImportingTsExtensions": true
  },
  "ts-node": {
    "esm": true,
    "logError": true,
    "pretty": true
  },
  "include": [
